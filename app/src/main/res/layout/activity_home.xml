<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_textView"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/title_design"
        android:gravity="center"
        android:text="@string/home_textView"
        android:textColor="#000"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/back_team_button_design"
        android:text="@string/stop_buton"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayRanking_button"
        app:layout_constraintVertical_bias="0.585" />

    <Button
        android:id="@+id/menber_condition_button"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/action_design"
        android:text="@string/member_condition_button"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_textView" />

    <Button
        android:id="@+id/todayRanking_button"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/action_design"
        android:text="@string/todayRanking_button"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menber_condition_button" />

    <ImageView
        android:id="@+id/hakusyu_boy"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayRanking_button"
        app:srcCompat="@drawable/hakusyu_boy1"
        android:contentDescription="@string/hakusyu_boy" />

    <ImageView
        android:id="@+id/hakusyu_girl"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/hakusyu_boy"
        app:layout_constraintTop_toBottomOf="@+id/todayRanking_button"
        app:srcCompat="@drawable/hakusyu_girl1"
        android:contentDescription="@string/hakusyu_girl" />

</androidx.constraintlayout.widget.ConstraintLayout>